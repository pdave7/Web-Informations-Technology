<% include partials/header-upper %>
<title>Browse</title>
<% include partials/header-lower %>
<div class="browse_container">
    <% include partials/navbar %>
    <section class="browse_content">
        <h1 class="cursive bold">Browse</h1>
        <div class="filters">
            <nav class="navbar navbar-expand-sm navbar-light bg-light">
                <button class="navbar-toggler" data-toggle="collapse" data-tartget="#filterMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="filterMenu" class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Brand</a>
                            <div class="dropdown-menu ml-auto">
                                <% var brands_to_use = [] %>
                                <% products.forEach(function(product){ %>
                                <% var flag = 0 %>
                                <% for (var i = 0; i < brands_to_use.length; i++){ %>
                                <% if (product.brand === brands_to_use[i]) { %>
                                <% flag = 1; %>
                                <% break; %>
                                <% } %>
                                <% } %>
                                <% if (flag === 0) { %>
                                <% brands_to_use.push(product.brand); %>
                                <% } %>
                                <% })%>
                                <% for (var j = 0; j < brands_to_use.length; j++) { %>
                                <a class="dropdown-item"><%= brands_to_use[j] %></a>
                                <div class="dropdown-divider"></div>
                                <% } %>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Price</a>
                            <div class="dropdown-menu">
                                <div class="dropdown-divider"></div>
                                <a href="#"  class="dropdown-item">min-high</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <section class="product_list">
            <% products.forEach(function(product){ %>
            <article>
                <a class="product_item text-secondary" href="/browse/<%= product.name %>">
                    <div class="item_image">
                        <img src=../"<%= product.image%>" alt="product_image">

                        <div class="item_desc bold">
                            <%= product.name %>
                        </div>
                        <div class="item_price_here">
                            $<%= parseFloat(product.price).toFixed(2) %>
                        </div>
                    </div>
                </a>
            </article>
            <% }) %>
        </section>
    </section>
</div>

<% include partials/footer-upper %>
<% include partials/footer-lower %>
